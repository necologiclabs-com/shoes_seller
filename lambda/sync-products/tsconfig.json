{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "rootDir": "./",
        "outDir": "./",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "/opt/nodejs/*": [
                "../layers/shared/nodejs/*"
            ]
        }
    },
    "include": [
        "*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}